                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.shortStartTime, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.shortStartTime, new { @readonly = "readonly" })
