                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.shortEndTime, new { @readonly = "readonly" })
                    <!--  @Html.ValidationMessageFor(model => model.shortEndTime, "", new { @class = "text-danger" })
                    -->
                </div>
            </div>

